{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "ROOT": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "space-infix-ops": [
      "error"
    ],
    "max-len": [
      "error"
    ],
    "no-console": [
      "off"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eol-last": [
      "error",
      "unix"
    ],
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "should" }
    ]
  }
}
